<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

   <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="850px"
        android:layout_height="wrap_content"
        android:text="If you forget your password or lose access to your account, you can use your phone number to help you get back into your account."
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#8bb1bd"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <EditText
        android:id="@+id/phoneField"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:hint="Phone:"
        android:gravity="center"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerInParent="true"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/textViewError"
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/phoneField"
        android:textColor="@color/colorRed"/>

    <Button
        android:id="@+id/sendButton"
        android:text="Send"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/active_button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_below="@+id/phoneField"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"/>
    
</RelativeLayout>
