<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

   <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="850px"
        android:layout_height="wrap_content"
        android:text="Please select and confirm your new password!"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#8bb1bd"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:password="true"/>

    <ToggleButton
        android:id="@+id/toggleButtonHidePassword"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/passwordField"
        android:layout_alignBaseline="@+id/passwordField"
        android:layout_marginLeft="5dp"
        android:background="@drawable/design_password_eye"
        android:textOff=""
        android:textOn=""
        android:text=""/>

    <TextView
        android:id="@+id/tvPasswordError"
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/passwordField"
        android:textColor="@color/colorRed"/>

    <EditText
        android:id="@+id/confirmPasswordField"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Confirm password"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/passwordField"
        android:layout_centerHorizontal="true"
        android:password="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvConfirmPasswordError"
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/confirmPasswordField"
        android:textColor="@color/colorRed"/>

    <Button
        android:id="@+id/changeButton"
        android:text="Change"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/active_button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/confirmPasswordField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"/>
    
</RelativeLayout>
